<h2 class="country-name">{{name}}</h2>
<div class="country-info">
    <ul class="country-info--list">
        <li class="country-info--list-item">
            <p><span class="country-info--category">Capital: </span>{{capital}}</p>
        </li>
        <li class="country-info--list-item">
            <p><span class="country-info--category">Population: </span>{{population}}</p>
        </li >
        <li class="country-info--languages country-info--list-item">
            <p><span class="country-info--category">Languages:</span></p>
            <ul class="languages-list">
                {{#each languages}}
                <li>
                    {{name}}
                </li>
                {{/each}}
            </ul>
        </li>
    </ul>
    <img class="country-info--img shadow-lg mb-5 bg-white rounded" src="{{flag}}" alt="">
</div>